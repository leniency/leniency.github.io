---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<article class="mb-3">
  <header>
    <div>{post.frontmatter.date}</div>
    <h3><a href={post.url}>{post.frontmatter.title}</a></h3>
  </header>
  <p>{post.frontmatter.description}</p>
  <a href={post.url}><small>Read more</small></a>
</article>